use strict;
use warnings;

use FindBin;
use lib "$FindBin::Bin/../lib";

use CSVql;

my @columns = @ARGV;
my $csv = CSVql->new();

#TODO: verify column names
print $csv->format(@columns)."\n";
while(my $row = $csv->fetch_row()) {
    my @out;
    push @out, $$row{$_} for @columns;

    print $csv->format(@out);
    print "\n";
}
